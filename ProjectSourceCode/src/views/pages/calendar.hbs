
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

  <!-- TOAST UI Calendar CSS -->
  <link rel="stylesheet" href="https://uicdn.toast.com/calendar/latest/toastui-calendar.min.css">
  <link rel="stylesheet" href="https://uicdn.toast.com/tui-date-picker/latest/tui-date-picker.css">
  <link rel="stylesheet" href="https://uicdn.toast.com/tui-time-picker/latest/tui-time-picker.css">

  <style>
  body {
    background-color: #f8fcf9;
    color: #000;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
  }

  main.container {
    background-color: #f0f9f5;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    /* ↓ Remove extra top spacing */
    margin: 0 auto;
  }

  h2.page-title {
    margin-top: 0;
    text-align: center;
    font-weight: bold;
    color: #004d40;
    font-size: 2rem;
  }

  .cal-nav button {
    min-width: 60px;
    font-weight: 500;
  }

  #calendar {
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  #clicked-event {
    font-weight: bold;
    color: #00796b;
  }
</style>

</head>
<body>

<main class="container">
  <h2 class="page-title mb-4">Trip Calendar</h2>

  <!-- Navigation buttons -->
  <div class="cal-nav d-flex align-items-center justify-content-center gap-3 mb-3">
    <button id="prev" class="btn btn-outline-primary btn-sm">‹</button>
    <span id="range" class="fw-bold"></span>
    <button id="next" class="btn btn-outline-primary btn-sm">›</button>
    <button id="today" class="btn btn-info btn-sm">Today</button>
  </div>

  <!-- Calendar Display -->
  <div id="calendar" style="height: 800px;"></div>
  <div id="clicked-event" class="mt-4 text-center"></div>
</main>

<!-- Hidden data attribute for calendar logic -->
<div id="calendar-data" data-username="{{username}}"></div>

<!-- TOAST UI Scripts -->
<script src="https://uicdn.toast.com/tui.code-snippet/latest/tui-code-snippet.min.js"></script>
<script src="https://uicdn.toast.com/tui.time-picker/latest/tui-time-picker.min.js"></script>
<script src="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.min.js"></script>
<script src="https://uicdn.toast.com/calendar/latest/toastui-calendar.min.js"></script>

<!-- Your local calendar.js -->
<script src="/js/calendar.js" defer></script>

</body>
